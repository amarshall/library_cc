%h1= @book.title
%p The books is
%p Title
= @book.title
%p Author
= @book.author
%p Publisher
= @book.publisher
%p Price
= @book.price
%p Issued by
= @book.user ? (@book.user.first_name + ' ' + @book.user.last_name) : 'None'

- if @book.checked_out?
  = button_to 'Check In', checkin_path(@book.id), confirm: 'Are you sure?'
- else
  = button_to 'Check Out', checkout_path(@book.id)

= button_to "Back", books_path, method: :get
- if current_user.admin?
  = button_to "Delete Book", book_path(@book.id), method: :delete, confirm: 'Are you sure?'
  = button_to "Edit Book", edit_book_path(@book.id), method: :get
