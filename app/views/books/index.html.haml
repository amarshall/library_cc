%h1 List of all the books is

%table{ border: '20' }
  %th Title
  %th Author
  %th Publisher
  %th Price
  %th Status
  - if current_user.admin?
    %th Delete Book?
    %th Edit Book?
  - @books.each do |book|
    %tr
      %td
        = link_to book.title, book_path(book.id)
      %td
        =book.author
      %td
        =book.publisher
      %td
        =book.price
      %td
        - if book.checked_out?
          Checked out by
          = book.user.first_name + ' ' + book.user.last_name
        - else
          = button_to 'Checkout', book_path(book), method: :get
      - if current_user.admin?
        %td
          = button_to 'Delete Book', book_path(book), method: :delete, confirm: 'Are you sure?'
        %td
          = button_to 'Edit Book', edit_book_path(book), method: :get
= button_to 'Back', :back, method: :get
