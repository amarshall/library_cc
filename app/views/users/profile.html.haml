%h2
  = "Hi " + @user.full_name + " !"

%p
  Your email address :
  = @user.email

- if @user.current_issued_books.empty?
  You have not issued any books yet. Want to
  = link_to 'check out', books_path
  a book?
- else
  You have issued the following books
  %table
    %th
      Serial No
    %th
      Book
    %th
      Issued On
    %th
      Check In?
    - @user.current_issued_books.each_with_index do |book,index|
      %tr
        %td
          = index+1
        %td
          = link_to book.title, book_path(book)
        %td
          = @user.user_book_records(book).first.issued_on.strftime('%e %b %Y %H:%m:%S%p')
        %td
          = button_to "Check In", checkin_path(book.id), method: :post, confirm: 'Are you sure?'
- if !@user.current_issued_books.empty?
  %p
    = link_to 'Check out a book', books_path
%p
  - if @user.admin?
    = button_to 'Add a book', new_book_path, method: :get
    = button_to 'Delete a book', books_path, method: :get
    = button_to 'Edit a book', books_path, method: :get
    = button_to 'Add a user', new_user_path, method: :get
    = button_to 'Edit a user', users_path, method: :get
    = button_to 'Delete a user', users_path, method: :get
