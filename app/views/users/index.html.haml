%h2 Users
%table{border: '2px'}
  %th
    Name
  %th
    Email Address
  %th
    Books Issued
  - @users.each do |user|
    %tr
      %td
        = user.first_name + user.last_name
      %td
        = user.email
      %td
        - user.books.each do |book|
          %li
            = book.title

= button_to 'Back', :back
